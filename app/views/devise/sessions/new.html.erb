<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: 'tu mail',
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: true,
                label: 'tu contrasena',
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean, label: 'acordarse de mi' if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Conectarme" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
